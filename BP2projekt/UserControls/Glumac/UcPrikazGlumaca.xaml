<UserControl x:Class="BP2projekt.UserControls.Glumac.UcPrikazGlumaca"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BP2projekt.UserControls.Glumac"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <DockPanel>
        <Label Content="Prikaz glumaca" DockPanel.Dock="Top" FontWeight="Bold" HorizontalContentAlignment="Center" Background="LightBlue" FontSize="15"></Label>
        <DataGrid x:Name="dgGlumci" Margin="30,30,30,0" DockPanel.Dock="Top" AlternatingRowBackground="LightBlue" Height="300"></DataGrid>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30,0,30,30">
            <Button x:Name="btnDodaj" Click="btnDodaj_Click" Width="60" Height="30" Content="Dodaj" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"></Button>
            <Button x:Name="btnObrisi" Click="btnObrisi_Click" Width="60" Height="30" Content="Obrisi" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"></Button>
        </StackPanel>
    </DockPanel>
</UserControl>
